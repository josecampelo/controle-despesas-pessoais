@using ControleDespesas.ViewModels
@model IEnumerable<TransacaoIndexViewModel>

@{
    ViewData["Title"] = "Transações";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success" title="Adicionar nova transação">Nova Transação</a>
</div>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="bi bi-funnel"></i> Filtrar Transações</h6>
    </div>
    <div class="card-body py-3">
        <form asp-action="Index" method="get">
            <div class="row g-2">
                <div class="col-md-2">
                    <label for="mes" class="form-label fw-bold">Mês</label>
                    <select name="mes" id="mes" class="form-select" asp-items="ViewBag.Meses"></select>
                </div>

                <div class="col-md-2">
                    <label for="ano" class="form-label fw-bold">Ano</label>
                    <select name="ano" id="ano" class="form-select" asp-items="ViewBag.Anos"></select>
                </div>

                <div class="col-md-2">
                    <label for="tipo" class="form-label fw-bold">Tipo</label>
                    <select name="tipo" id="tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoTransacao>()">
                        <option value="">Todos</option>
                    </select>
                    @if (ViewBag.FiltroTipo != null)
                    {
                        <script>
                            document.getElementById('tipo').value = "@((int)ViewBag.FiltroTipo)";
                        </script>
                    }
                </div>

                <div class="col-md-4">
                    <label for="descricao" class="form-label fw-bold">Descrição</label>
                    <input type="text" name="descricao" id="descricao" class="form-control"
                           value="@ViewBag.FiltroDescricao" />
                </div>

                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-success flex-grow-1" title="Filtrar">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-success" title="Limpar filtros">
                        Limpar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-custom-green">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Valor)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <td style="width: 180px;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>