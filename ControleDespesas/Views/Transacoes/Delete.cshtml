@model ControleDespesas.Models.Transacao

@{
    ViewData["Title"] = "Excluir Transação";
}

<h1 class="h2">@ViewData["Title"]</h1>
<hr />

<div class="alert alert-warning">
    <strong>Atenção:</strong> Tem certeza que deseja excluir esta transação?
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" disabled />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Valor</label>
                <input value="@Model.Valor.ToString("C")" class="form-control" disabled />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Categoria</label>
                <input value="@Model.Categoria?.Nome" class="form-control" disabled />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Data</label>
                <input value="@Model.Data.ToShortDateString()" class="form-control" disabled />
            </div>

            <div class="row mt-4 gx-2">
                <div class="col-8 d-grid">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </div>
                <div class="col-4 d-grid">
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>