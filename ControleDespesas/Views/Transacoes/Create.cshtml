@model ControleDespesas.ViewModels.TransacaoViewModel

@{
    ViewData["Title"] = "Nova Transação";
}

<h1 class="h2">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" placeholder="Mercado"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" type="number" class="form-control" placeholder="273,00" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoTransacao>()">
                    <option value="" selected>Selecione...</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoriaId"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="Model.Categorias">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="row mt-4 gx-2">
                <div class="col-8 d-grid">
                    <input type="submit" value="Adicionar" class="btn btn-success" title="Adicionar transação"/>
                </div>
                <div class="col-4 d-grid">
                    <a asp-action="Index" class="btn btn-outline-success" title="Voltar para minhas transações">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}