@model ControleDespesas.Models.Categoria
@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1 class="h2">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="alert alert-warning">
        <strong>Atenção:</strong> Você está prestes a excluir a categoria abaixo. Esta ação não poderá ser desfeita.
    </div>
    <div class="col-md-4">
        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Mercado" disabled/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoTransacao>()" disabled>
                    <option value="" selected>Selecione...</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="row mt-4 gx-2">
                <div class="col-8 d-grid">
                    <input type="submit" value="Excluir" class="btn btn-danger" title="Excluir categoria" />
                </div>
                <div class="col-4 d-grid">
                    <a asp-action="Index" class="btn btn-outline-success" title="Voltar para minhas categorias">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>